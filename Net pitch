  <script>
    // Dashboard Toggle
    const dashboardToggle = document.getElementById('dashboard-toggle');
    const dashboard = document.getElementById('dashboard');
    
    dashboardToggle.addEventListener('click', () => {
      dashboard.classList.toggle('show');
    });
    
    // Close dashboard when clicking outside
    document.addEventListener('click', (e) => {
      if (!dashboardToggle.contains(e.target) && !dashboard.contains(e.target)) {
        dashboard.classList.remove('show');
      }
    });
    
    // Refresh Links
    const refreshLinks = document.getElementById('refresh-links');
    
    refreshLinks.addEventListener('click', () => {
      const linksContainer = document.getElementById('live-links-container');
      const links = linksContainer.querySelectorAll('.link-item a');
      
      // Simulate refreshing links
      links.forEach(link => {
        const currentHref = link.getAttribute('href');
        const newHref = currentHref + '?refresh=' + Date.now();
        link.setAttribute('href', newHref);
      });
      
      // Visual feedback
      refreshLinks.innerHTML = '<i class="fas fa-check mr-1"></i> Refreshed';
      setTimeout(() => {
        refreshLinks.innerHTML = '<i class="fas fa-sync-alt mr-1"></i> Refresh';
      }, 1500);
    });

    // Navigation
    document.querySelectorAll('.nav-link').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        showPage(link.dataset.target);
        
        // Close dashboard after navigation
        dashboard.classList.remove('show');
        
        // Initialize charts when navigating to profile or store
        if (link.dataset.target === 'profile') {
          setTimeout(initActivityChart, 100);
        } else if (link.dataset.target === 'store') {
          setTimeout(initSalesChart, 100);
        }
      });
    });

    function showPage(page) {
      document.querySelectorAll('[data-page]').forEach(el => {
        el.style.display = 'none';
      });
      document.querySelector(`[data-page="${page}"]`).style.display = 'block';
      
      // Reset TV Room when navigating away
      if (page !== 'tv-room') {
        document.getElementById('live-player').classList.add('hidden');
        document.getElementById('stream-video').pause();
      }
      
      // Update Go Live page based on premium status
      if (page === 'live') {
        updateLivePage();
      }
      
      // Update blocked users count when navigating to fan zone or reels
      if (page === 'fan-zone') {
        updateBlockedUsers('fan-zone');
        startFanZoneBackground();
      } else if (page !== 'fan-zone') {
        stopFanZoneBackground();
      } else {
        updateBlockedUsers(page);
      }
    }

    // Sign In Modal
    const signinModal = document.getElementById('signin-modal');
    const signinBtn = document.getElementById('signin-btn');
    
    signinBtn.addEventListener('click', () => {
      signinModal.style.display = 'block';
    });
    
    window.addEventListener('click', (e) => {
      if (e.target === signinModal) {
        signinModal.style.display = 'none';
      }
    });
    
    // Champions League App Login
    document.getElementById('champions-login').addEventListener('click', () => {
      alert('Connecting to Champions League App...\nPlease confirm login in the app.');
      signinModal.style.display = 'none';
      // Simulate successful login
      setTimeout(() => {
        signinBtn.innerHTML = '<i class="fas fa-user-circle"></i>';
        signinBtn.classList.remove('bg-green-600');
        signinBtn.classList.add('bg-gray-600');
        // Show profile modal after login
        setTimeout(() => {
          document.getElementById('profile-modal').style.display = 'block';
        }, 500);
      }, 1000);
    });
    
    // Email Login
    document.getElementById('email-login').addEventListener('click', () => {
      const email = document.getElementById('email-input').value;
      if (email && email.includes('@')) {
        const code = Math.floor(100000 + Math.random() * 900000);
        alert(`Login code ${code} has been sent to ${email}. Please check your inbox.`);
        signinModal.style.display = 'none';
        // Simulate successful login
        setTimeout(() => {
          signinBtn.innerHTML = '<i class="fas fa-user-circle"></i>';
          signinBtn.classList.remove('bg-green-600');
          signinBtn.classList.add('bg-gray-600');
          // Show profile modal after login
          setTimeout(() => {
            document.getElementById('profile-modal').style.display = 'block';
          }, 500);
        }, 1000);
      } else {
        alert('Please enter a valid email address.');
      }
    });

    // Save Profile
    document.getElementById('save-profile').addEventListener('click', () => {
      const username = document.getElementById('username').value;
      const nickname = document.getElementById('nickname').value;
      if (username && nickname) {
        document.getElementById('profile-modal').style.display = 'none';
        alert(`Profile created successfully!\nUsername: ${username}\nNickname: ${nickname}`);
      } else {
        alert('Please fill in all fields.');
      }
    });

    // Handle profile picture preview
    document.getElementById('profile-pic').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          document.getElementById('profile-preview').src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });

    // Change profile picture
    function changeProfilePic() {
      const input = document.createElement('input');
      input.type = 'file';
      input.accept = 'image/*';
      input.onchange = function(e) {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function(e) {
            document.getElementById('profile-pic-display').src = e.target.result;
            alert('Profile picture updated successfully!');
          };
          reader.readAsDataURL(file);
        }
      };
      input.click();
    }

    // KYC Verification
    document.getElementById('verify-kyc').addEventListener('click', () => {
      document.getElementById('kyc-modal').style.display = 'block';
    });

    document.getElementById('submit-kyc').addEventListener('click', () => {
      const name = document.getElementById('full-name').value;
      const phone = document.getElementById('phone').value;
      const id = document.getElementById('id-number').value;
      
      if (name && phone && id) {
        if (phone.startsWith('+254') && phone.length === 13) {
          const code = Math.floor(100000 + Math.random() * 900000);
          alert(`Verification code ${code} has been sent to ${phone}. Please confirm to complete verification.`);
          document.getElementById('kyc-modal').style.display = 'none';
          document.getElementById('kyc-status').classList.remove('hidden');
          document.getElementById('verify-kyc').disabled = true;
          document.getElementById('verify-kyc').textContent = 'Verified';
          document.getElementById('verify-kyc').classList.remove('bg-blue-600');
          document.getElementById('verify-kyc').classList.add('bg-green-600');
        } else {
          alert('Please enter a valid Kenyan phone number (+254...).');
        }
      } else {
        alert('Please fill in all fields.');
      }
    });

    // Dark Mode Toggle
    document.getElementById('dark-mode-toggle').addEventListener('click', () => {
      const icon = document.getElementById('dark-mode-toggle').querySelector('i');
      if (icon.classList.contains('fa-moon')) {
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
        document.body.classList.add('dark-mode');
      } else {
        icon.classList.remove('fa-sun');
        icon.classList.add('fa-moon');
        document.body.classList.remove('dark-mode');
      }
    });

    // Play Live Stream
    function playLiveStream(streamUrl, title) {
      const player = document.getElementById('live-player');
      const video = document.getElementById('stream-video');
      
      player.classList.remove('hidden');
      video.src = streamUrl;
      video.load();
      video.play();
      
      window.scrollTo({ top: 0, behavior: 'smooth' });
      document.title = `${title} - Live | Net Pitch`;
    }

    // Copy to Clipboard
    function copyToClipboard(elementId) {
      const element = typeof elementId === 'string' ? document.getElementById(elementId) : elementId;
      const text = element.value || element.textContent;
      
      navigator.clipboard.writeText(text).then(() => {
        alert('Link copied to clipboard!');
      }).catch(err => {
        prompt('Copy to clipboard: Ctrl+C, Enter', text);
      });
    }

    // Paste Link
    function pasteLink(elementId) {
      navigator.clipboard.readText().then(text => {
        if (text && text.includes('netpitch')) {
          document.getElementById(elementId).value = text;
          alert('Link pasted successfully!');
        } else {
          alert('No valid Net Pitch link found in clipboard.');
        }
      }).catch(err => {
        alert('Failed to read clipboard. Please paste manually.');
      });
    }

    // Generate QR Code
    function generateQR(elementId) {
      const element = document.getElementById(elementId);
      const text = element.value;
      alert(`QR code generated for: ${text}\n\nIn a real app, this would display a QR code image.`);
    }

    // View Profile
    function viewProfile(username) {
      alert(`Viewing profile: ${username}\n\nIn a real app, this would show ${username}'s full profile with their posts, reels, and stats.`);
    }

    // Select Player
    function selectPlayer(element, playerName) {
      // Remove selected class from all player cards
      document.querySelectorAll('.player-card').forEach(card => {
        card.classList.remove('selected');
      });
      
      // Add selected class to clicked card
      element.classList.add('selected');
      
      // Update favorite player in profile
      document.getElementById('favorite-player').textContent = playerName;
      alert(`You've selected ${playerName} as your favorite player! You'll now receive updates and highlights about them.`);
    }

    // Net Animation
    function showNetAnimation() {
      const animation = document.getElementById('net-animation');
      animation.style.opacity = '1';
      setTimeout(() => {
        animation.style.opacity = '0';
      }, 1500);
    }

    // Upgrade to Premium
    function upgradeTo(tier) {
      alert(`You've selected the ${tier} plan!\n\nPlease proceed to Mini Vault to complete your payment of ${document.querySelector('[onclick="upgradeTo(\'' + tier + '\')"]').parentElement.querySelector('.text-2xl').textContent.split(' ')[0]} KES.`);
      showPage('vault');
    }

    // Add to Store
    function addToStore(item) {
      const promotedItems = document.getElementById('promoted-items');
      const newItem = document.createElement('div');
      newItem.className = 'bg-gray-700 p-2 rounded text-sm';
      newItem.textContent = `• ${item}`;
      promotedItems.appendChild(newItem);
      alert(`${item} has been added to your store! Share your store link to start earning.`);
    }

    // Initialize Activity Chart
    function initActivityChart() {
      const ctx = document.getElementById('activity-chart').getContext('2d');
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
          datasets: [{
            label: 'Posts',
            data: [3, 5, 2, 6, 4, 7, 5],
            borderColor: '#2E8B57',
            backgroundColor: 'rgba(46, 139, 87, 0.1)',
            tension: 0.4
          }, {
            label: 'Reels Watched',
            data: [8, 12, 15, 10, 18, 14, 20],
            borderColor: '#3CB371',
            backgroundColor: 'rgba(60, 179, 113, 0.1)',
            tension: 0.4
          }, {
            label: 'Nets',
            data: [5, 8, 6, 12, 9, 15, 11],
            borderColor: '#2E8B57',
            borderDash: [5, 5],
            backgroundColor: 'rgba(46, 139, 87, 0.05)',
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              labels: {
                color: 'white'
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              ticks: {
                color: 'white'
              }
            },
            x: {
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              ticks: {
                color: 'white'
              }
            }
          }
        }
      });
    }

    // Initialize Sales Chart
    function initSalesChart() {
      const ctx = document.getElementById('sales-chart').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
          datasets: [{
            label: 'Sales (KES)',
            data: [850, 1200, 950, 1400, 1100, 1650],
            backgroundColor: 'rgba(46, 139, 87, 0.7)',
            borderColor: '#2E8B57',
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              labels: {
                color: 'white'
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              ticks: {
                color: 'white'
              }
            },
            x: {
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              ticks: {
                color: 'white'
              }
            }
          }
        }
      });
    }

    // Update Go Live Page
    function updateLivePage() {
      const isPremium = confirm('Are you a premium user? (Click OK for Yes, Cancel for No)');
      const premiumNotice = document.getElementById('premium-notice');
      const streamShareLink = document.getElementById('stream-share-link');
      
      if (isPremium) {
        premiumNotice.classList.remove('hidden');
        streamShareLink.value = 'https://netpitch.africa/live/user123?premium=10KES';
      } else {
        premiumNotice.classList.add('hidden');
        streamShareLink.value = 'https://netpitch.africa/live/user123';
      }
    }

    // Start Live Stream
    let liveInterval;
    function startLiveStream() {
      const title = document.getElementById('stream-title').value;
      if (!title) {
        alert('Please enter a stream title');
        return;
      }
      
      document.getElementById('start-live').style.display = 'none';
      document.getElementById('end-live').style.display = 'block';
      
      // Simulate viewers and earnings
      let viewers = 0;
      let earnings = 0;
      let seconds = 0;
      
      document.getElementById('viewer-count').textContent = '0';
      document.getElementById('earnings').textContent = '0 KES';
      document.getElementById('duration').textContent = '00:00';
      
      liveInterval = setInterval(() => {
        // Randomly increase viewers
        if (Math.random() > 0.7) {
          viewers += Math.floor(Math.random() * 3) + 1;
          document.getElementById('viewer-count').textContent = viewers;
        }
        
        // Increment duration
        seconds++;
        const mins = Math.floor(seconds / 60).toString().padStart(2, '0');
        const secs = (seconds % 60).toString().padStart(2, '0');
        document.getElementById('duration').textContent = `${mins}:${secs}`;
        
        // Add earnings for premium users
        const isPremium = document.getElementById('premium-notice').classList.contains('hidden') === false;
        if (isPremium && seconds % 60 === 0) {  // Every minute
          earnings += 10;
          document.getElementById('earnings').textContent = `${earnings} KES`;
        }
      }, 1000);
      
      alert(`Live stream started: "${title}"\n\nShare your stream link to invite viewers!`);
    }

    // End Live Stream
    function endLiveStream() {
      clearInterval(liveInterval);
      document.getElementById('start-live').style.display = 'block';
      document.getElementById('end-live').style.display = 'none';
      
      const earnings = document.getElementById('earnings').textContent;
      alert(`Stream ended!\n\nTotal earnings: ${earnings}\nDuration: ${document.getElementById('duration').textContent}`);
    }

    // Toggle Camera/Mic
    function toggleCamera() {
      alert('Camera toggled');
    }
    
    function toggleMic() {
      alert('Microphone toggled');
    }

    // Fan Zone Posts
    const postsFeed = document.getElementById('posts-feed');
    const postInput = document.getElementById('post-input');

    function createPost() {
      const content = postInput.value.trim();
      if (!content) return;

      const post = document.createElement('div');
      post.className = 'transparent-post p-5 rounded-xl shadow';
      post.innerHTML = `
        <div class="flex items-center space-x-3 mb-2">
          <img src="https://placehold.co/40x40/2E8B57/FFFFFF?text=U" alt="User" class="rounded-full"/>
          <div>
            <p class="font-semibold text-white">@User${Math.floor(Math.random() * 1000)}</p>
            <p class="text-sm text-gray-400">IQ Score: <span class="iq-score">${Math.floor(Math.random() * 2000)}</span></p>
          </div>
        </div>
        <p class="text-white">${content}</p>
        <div class="flex space-x-6 mt-3 text-sm">
          <button class="text-blue-400"><i class="fas fa-comment"></i> Reply</button>
          <button class="text-green-400 font-semibold" onclick="netPost(this)"><i class="fas fa-retweet"></i> Net (0)</button>
          <button class="text-gray-400 like-btn" onclick="likePost(this)"><i class="fas fa-heart"></i> 0</button>
        </div>
        <div class="mt-3 border-t border-gray-600 pt-3">
          <div class="flex items-center space-x-2">
            <img src="https://placehold.co/30x30/2E8B57/FFFFFF?text=R" alt="Reply" class="w-6 h-6 rounded-full"/>
            <input type="text" placeholder="Add a reply..." class="flex-1 p-1 text-sm bg-transparent border-b border-white outline-none"/>
            <button class="text-xs text-blue-400"><i class="fas fa-paper-plane"></i></button>
          </div>
        </div>
      `;
      postsFeed.prepend(post);
      postInput.value = '';
    }

    function netPost(btn) {
      let count = parseInt(btn.textContent.split('(')[1]);
      btn.innerHTML = `<i class="fas fa-retweet"></i> Net (${++count})`;
      // Update IQ Admirers based on nets
      if (count % 10 === 0) {
        alert(`Great! You've reached ${count} nets! Your IQ Admirers are growing!`);
      }
      // Show net animation
      showNetAnimation();
    }

    function likePost(btn) {
      let count = parseInt(btn.textContent.replace('❤️ ', ''));
      btn.innerHTML = `<i class="fas fa-heart"></i> ${++count}`;
    }

    // Mini Vault Logic
    let balance = 350.00;
    let isVerified = false;

    function updateBalance() {
      document.getElementById('balance').textContent = balance.toFixed(2) + ' KES';
    }

    // Currency Converter
    function convertCurrency() {
      const amount = parseFloat(document.getElementById('convert-amount').value);
      const from = document.getElementById('convert-from').value;
      
      if (isNaN(amount) || amount <= 0) {
        alert('Please enter a valid amount');
        return;
      }
      
      let rate;
      switch(from) {
        case 'USD': rate = 120; break;
        case 'EUR': rate = 130; break;
        case 'GBP': rate = 150; break;
        case 'UGX': rate = 0.033; break;
        case 'TZS': rate = 0.05; break;
        default: rate = 120;
      }
      
      const ksh = (amount * rate).toFixed(2);
      document.getElementById('convert-result').textContent = `${ksh} KES`;
      
      if (confirm(`Convert ${amount} ${from} to ${ksh} KES (fee: ${(ksh * 0.002).toFixed(2)} KES)?`)) {
        const fee = ksh * 0.002;
        balance += parseFloat(ksh) - fee;
        updateBalance();
        alert(`${amount} ${from} converted to ${ksh} KES. Fee: ${fee.toFixed(2)} KES applied.`);
      }
    }

    function buyLinks() {
      if (balance >= 100) {
        balance -= 100;
        alert('Successfully purchased 10 stream links!');
        updateBalance();
      } else {
        alert('Insufficient balance in Mini Vault.');
      }
    }

    function withdraw(method) {
      if (!isVerified) {
        alert('Please complete KYC verification before withdrawing funds.');
        showPage('vault');
        return;
      }
      
      const amount = prompt(`Enter amount to withdraw to ${method.toUpperCase()}:`);
      if (amount && !isNaN(amount) && parseFloat(amount) <= balance) {
        const fee = parseFloat(amount) * 0.002;
        balance -= (parseFloat(amount) + fee);
        const code = Math.floor(100000 + Math.random() * 900000);
        alert(`Withdrew ${amount} KES to ${method.toUpperCase()}. Fee: ${fee.toFixed(2)} KES.\nConfirmation code: ${code} sent to your email and phone.`);
        updateBalance();
      } else if (amount) {
        alert('Invalid amount or insufficient balance.');
      }
    }

    // Contact Form
    function sendMessage(e) {
      e.preventDefault();
      const email = document.querySelector('#contact-form input[type="email"]').value;
      const code = Math.floor(100000 + Math.random() * 900000);
      alert(`Message sent to harmingworld@gmail.com from ${email}. Verification code ${code} sent to your email.\nWe'll reply soon!`);
      document.getElementById('form-status').classList.remove('hidden');
      setTimeout(() => {
        document.getElementById('contact-form').reset();
        document.getElementById('form-status').classList.add('hidden');
      }, 2000);
    }
    
    // Search Users Function
    function searchUsers(page) {
      const searchInput = document.getElementById(`${page === 'reels' ? 'reels' : 'fanzone'}-search`);
      const searchTerm = searchInput.value.toLowerCase();
      
      if (searchTerm.length < 2) {
        return;
      }
      
      // In a real app, this would search through user database
      // For demo purposes, we'll show a mock search result
      const mockUsers = [
        { username: 'JohnFootball', nickname: 'King of Dribbles', iq: 890 },
        { username: 'MaryKicks', nickname: 'SheShoots', iq: 1560 },
        { username: 'TitoDefender', nickname: 'Wall of Steel', iq: 670 },
        { username: 'NairobiFan', nickname: 'Local Hero', iq: 450 },
        { username: 'GoalKing', nickname: 'Sharp Shooter', iq: 1200 }
      ];
      
      const results = mockUsers.filter(user => 
        user.username.toLowerCase().includes(searchTerm) || 
        user.nickname.toLowerCase().includes(searchTerm)
      );
      
      if (results.length > 0) {
        let resultsHtml = '<div class="bg-gray-800 p-4 rounded-lg mt-4">';
        resultsHtml += `<p class="text-sm mb-2">Found ${results.length} user(s):</p>`;
        results.forEach(user => {
          resultsHtml += `
            <div class="flex items-center justify-between p-2 border-b border-gray-700 last:border-b-0">
              <div>
                <p class="font-semibold text-white">@${user.username}</p>
                <p class="text-sm text-gray-400">${user.nickname} • 🧠 ${user.iq}</p>
              </div>
              <div class="flex space-x-2">
                <button class="text-xs bg-green-600 hover:bg-green-700 text-white px-2 py-1 rounded" onclick="viewProfile('${user.username}')">View</button>
                <button class="text-xs bg-red-600 hover:bg-red-700 text-white px-2 py-1 rounded" onclick="blockUser('${user.username}', '${page}')">Block</button>
              </div>
            </div>
          `;
        });
        resultsHtml += '</div>';
        
        // Add results after search input
        const searchContainer = searchInput.parentElement;
        const existingResults = searchContainer.querySelector('.search-results');
        if (existingResults) {
          existingResults.remove();
        }
        
        const resultsDiv = document.createElement('div');
        resultsDiv.className = 'search-results';
        resultsDiv.innerHTML = resultsHtml;
        searchContainer.appendChild(resultsDiv);
      }
    }
    
    // Block User Function
    let blockedUsers = [];
    
    function blockUser(username, page) {
      if (!blockedUsers.includes(username)) {
        blockedUsers.push(username);
        alert(`You have blocked @${username}. You will no longer see their content.`);
        
        // Remove search results
        const searchContainer = document.querySelector(`#${page === 'reels' ? 'reels' : 'fanzone'}-search`).parentElement;
        const resultsDiv = searchContainer.querySelector('.search-results');
        if (resultsDiv) {
          resultsDiv.remove();
        }
        
        // Update blocked users list
        updateBlockedUsers(page);
      }
    }
    
    // Unblock User Function
    function unblockUser(username) {
      blockedUsers = blockedUsers.filter(user => user !== username);
      alert(`You have unblocked @${username}.`);
      updateBlockedUsers();
    }
    
    // Update Blocked Users List
    function updateBlockedUsers(page) {
      const listId = page === 'reels' ? 'blocked-users-list' : 'blocked-users-list-fanzone';
      const countId = page === 'reels' ? 'blocked-count' : 'blocked-count-fanzone';
      
      const list = document.getElementById(listId);
      const count = document.getElementById(countId);
      
      if (blockedUsers.length === 0) {
        list.innerHTML = '<p class="text-gray-400 text-center py-4">No blocked users</p>';
        count.textContent = '0 users';
      } else {
        let listHtml = '';
        blockedUsers.forEach(username => {
          listHtml += `
            <div class="blocked-user">
              <span>@${username}</span>
              <button class="unblock-btn" onclick="unblockUser('${username}')">Unblock</button>
            </div>
          `;
        });
        list.innerHTML = listHtml;
        count.textContent = `${blockedUsers.length} user${blockedUsers.length === 1 ? '' : 's'}`;
      }
    }
    
    // Fan Zone Background
    const fanZoneBg = document.getElementById('fan-zone-bg');
    const clubLogos = [
      'https://upload.wikimedia.org/wikipedia/en/thumb/5/5c/Real_Madrid_CF.svg/1200px-Real_Madrid_CF.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/b/bf/Barcelona_2015.svg/1200px-Barcelona_2015.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/9/9a/Manchester_United_FC_crest.svg/1200px-Manchester_United_FC_crest.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/f/f2/Liverpool_FC_logo.svg/1200px-Liverpool_FC_logo.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/e/eb/Manchester_City_FC_badge.svg/1200px-Manchester_City_FC_badge.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/5/56/Arsenal_F.C._logo.svg/1200px-Arsenal_F.C._logo.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/2/2a/Chelsea_FC.svg/1200px-Chelsea_FC.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/7/7a/Tottenham_Hotspur.svg/1200px-Tottenham_Hotspur.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/4/4c/AFC_Bournemouth.svg/1200px-AFC_Bournemouth.svg.png',
      'https://upload.wikimedia.org/wikipedia/en/thumb/8/8b/West_Ham_United_FC.svg/1200px-West_Ham_United_FC.svg.png'
    ];
    
    let currentLogoIndex = 0;
    let backgroundInterval;
    
    function startFanZoneBackground() {
      // Set initial background
      fanZoneBg.style.backgroundImage = `url('${clubLogos[currentLogoIndex]}')`;
      
      // Change background every 5 seconds
      backgroundInterval = setInterval(() => {
        currentLogoIndex = (currentLogoIndex + 1) % clubLogos.length;
        fanZoneBg.style.backgroundImage = `url('${clubLogos[currentLogoIndex]}')`;
      }, 5000);
    }
    
    function stopFanZoneBackground() {
      if (backgroundInterval) {
        clearInterval(backgroundInterval);
      }
    }
  </script>

</body>
</html>
